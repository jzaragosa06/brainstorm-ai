<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wikipedia Sentence Finder</title>
    <link rel="stylesheet"
        href="//en.wikipedia.org/w/load.php?debug=false&lang=en&modules=mediawiki.legacy.commonPrint,shared|skins.vector.styles&only=styles&skin=vector&*">
</head>

<body>
    <div id="wiki-content">
        <!-- Wikipedia content will be loaded here -->

        <p>cat cat cat A.</p>
        <p>cat cat cat B.</p>
        <p>Lorem ipsum <a href="https://example.com">dolor sit amet</a> and secutor el eloor <a
                href="https://example.com">cat</a>, consectetur adipiscing elit. Sed do eiusmod.

        </p>
        <p>cat cat cat C.</p>
    </div>

    <script>
        document.getElementById('wiki-content').addEventListener('click', function (event)
        {
            if (event.target.tagName === 'A')
            {
                event.preventDefault(); // Prevent default link behavior

                // Get the clicked link's parent element
                const parentText = event.target.parentElement.textContent;

                // Extract the sentence containing the clicked link
                const regex = /[^.!?]*[.!?]/g; // Regex to split text into sentences
                const sentences = parentText.match(regex);
                const clickedLinkText = event.target.textContent;

                // Find the sentence with the link
                const sentenceWithLink = sentences.find(sentence => sentence.includes(clickedLinkText));

                if (sentenceWithLink)
                {
                    console.log('Sentence with link:', sentenceWithLink.trim());
                    // You can handle this sentence as needed, such as displaying or sending it to a server
                }
            }
        });
    </script>
</body>

</html>