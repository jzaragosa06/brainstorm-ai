<body id="body">
    <style>
        /* Body styling for layout */
        #body {
            display: flex;
            flex-direction: row;
            overflow: hidden;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        /* Left container (includes navbar and pageContainer) */
        #leftDiv {
            flex-basis: 65%;
            display: flex;
            flex-direction: column;
            background-color: #f6f6f6;
            border-right: 1px solid #ccc;
        }

        /* Navbar styling */
        #navbar {
            display: flex;
            align-items: center;
            padding: 10px;
            background-color: #eaeaea;
            border-bottom: 1px solid #ccc;
        }

        #navbar button {
            height: 40px;
            width: 40px;
            margin-right: 10px;
            border: 1.5px solid #ccc;
            border-radius: 5px;
            background-color: #4a90e2;
            color: #fff;
            cursor: pointer;
        }

        #navbar button:hover {
            background-color: #357abd;
        }

        /* Page container styling */
        #pageContainer {
            flex-grow: 1;
            margin: 20px;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
            position: relative;
        }

        #pageContainer>* {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow-y: auto;
        }

        /* Right container (svgContainer) */
        #svgcontainer {
            flex-grow: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ffffff;
            margin: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
    </style>

    <div id="leftDiv">
        <div id="navbar">
            <button id="backButton" title="Back">back</button>
            <button id="forwardButton" title="Forward">forward</button>
            <button id="deleteButton" title="Remove">delete</button>
        </div>

        <div id="pageContainer">
            <p>pageContainer</p>
        </div>
    </div>

    <div id="svgcontainer">
        <p>svgContainer</p>
    </div>

    <script src="/js/index.js"></script>
</body>